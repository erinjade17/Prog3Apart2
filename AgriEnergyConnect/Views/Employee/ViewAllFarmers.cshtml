@model IEnumerable<AgriEnergyConnect.Models.Farmer>  // List of Farmer objects

@{
    ViewData["Title"] = "All Farmers";  // Page title
}

<h2>All Farmers</h2>  <!-- List heading -->

<p>
    <a asp-action="AddFarmer" class="btn btn-success">Add New Farmer</a>  <!-- Add new farmer button -->
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>  <!-- Farmer's name -->
            <th>Email</th>  <!-- Farmer's email -->
            <th>Phone</th>  <!-- Farmer's phone -->
            <th>Location</th>  <!-- Farmer's location -->
            <th>Products</th>  <!-- Farmer's products -->
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
                <td>@farmer.Phone</td>
                <td>@farmer.Location</td>
                <td>
                    @if (farmer.Products != null && farmer.Products.Any())
                    {
                        <ul>
                            @foreach (var product in farmer.Products)
                            {
                                <li>@product.Name - @product.Category - @product.ProductionDate.ToShortDateString()</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No products</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
