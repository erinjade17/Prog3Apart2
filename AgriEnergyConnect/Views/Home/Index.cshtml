@{
    ViewData["Title"] = "Home";
      <!-- Set the page title -->
}

<div class="container mt-5">
    <!-- Main content container -->
    <div class="text-center mb-5">
        <!-- Centered heading and description -->
        <h1 class="display-4 text-success">Agri-EnergyConnect</h1>
        <p class="lead text-muted">Welcome to Agri-EnergyConnect</p>
        <p class="text-secondary">
            AgriEnergyConnect is an innovative web platform designed to bridge the gap between sustainable agriculture and green energy solutions.
        </p>
    </div>

    <div class="row justify-content-center">
        <!-- Centered button column -->
        <div class="col-md-4 text-center">
            <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-lg w-100 mb-3">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success btn-lg w-100">Register</a>
        </div>
    </div>
</div>
